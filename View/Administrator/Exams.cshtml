@model IEnumerable<WebBasedTMS.Models.Exam>

@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="col">
    <a href="AddExams" class="btn btn-info">New Exam Date</a>
    <div class="card shadow">
        <div class="card-header border-0">
            <h3 class="mb-0">Exam Details</h3>
        </div>
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Activity</th>
                        <th scope="col">Day</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dates in Model)
                     {
                    <tr>
                        <th>@dates.Activity</th>
                        <td>@dates.Day</td>
                        <td>@dates.Date.ToString("dd MMMM yyyy")</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateExams", "Administrator", new { id = dates.Id }, null) | 
                            @Html.ActionLink("Delete", "RemoveExamConfirmation", "Administrator", new { id = dates.Id }, null)
                        </td>
                    </tr>
                     }
                    
                </tbody>
            </table>
        </div>

    </div>
</div>