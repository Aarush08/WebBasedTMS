@model WebBasedTMS.Models.SendEmails
@{
    ViewBag.Title = "SendEmails";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 2px solid red;
        }
    </style>
<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Send Emails</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ToWhom, new { @class = "form-control-label" })
                                <select class="form-control" id="StudentGender" name="ToWhom">
                                    <option>Select Choice</option>
                                    <option value="TC">Test Centres</option>
                                    <option value="CA">Candidates</option>
                                    <option value="FA">Faculty</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Subject, new { @class = "form-control-label" })
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-alternative", @placeholder = "Subject" })
                                @Html.ValidationMessageFor(m => m.Subject, "")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Body, new { @class = "form-control-label" })
                                @Html.TextAreaFor(m => m.Body, new { @class = "form-control form-control-alternative", @placeholder = "Body" })
                                @Html.ValidationMessageFor(m => m.Body, "")
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary">Send Emails</button>

            }

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>