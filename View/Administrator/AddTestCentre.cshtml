@model WebBasedTMS.Models.TestCentres

@{
    ViewBag.Title = "AddTestCentre";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 2px solid red;
        }
    </style>


<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">New Test Centre</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <form>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-alternative", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.Name, "")
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-alternative", @placeholder = "Address" })
                                    @Html.ValidationMessageFor(m => m.Address, "")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.City, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control form-control-alternative", @placeholder = "City" })
                                    @Html.ValidationMessageFor(m => m.City, "")
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.State, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.State, new { @class = "form-control form-control-alternative", @placeholder = "State & Country" })
                                    @Html.ValidationMessageFor(m => m.State, "")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PinCode, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control form-control-alternative", @placeholder = "Pin Code" })
                                    @Html.ValidationMessageFor(m => m.PinCode, "")
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactNo, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control form-control-alternative", @placeholder = "Contact Number" })
                                    @Html.ValidationMessageFor(m => m.ContactNo, "")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-alternative", @placeholder = "Email Id" })
                                    @Html.ValidationMessageFor(m => m.Email, "")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TotalSeats, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.TotalSeats, new { @class = "form-control form-control-alternative", @placeholder = "Total Seats" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AvailableSeats, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.AvailableSeats, new { @class = "form-control form-control-alternative", @placeholder = "Available Seats" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary">Save Centre</button>

                </form>
            }

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>