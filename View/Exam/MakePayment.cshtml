@model WebBasedTMS.Models.Payment

@{
    ViewBag.Title = "MakePayment";
    Layout = "~/Views/Shared/_Exam.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }

    .input-validation-error {
        border: 2px solid red;
    }
</style>
<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">New Registration</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m=>m.Id)
                @Html.HiddenFor(m => m.Reason, new { Value="Exam"})
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "form-control-label" })
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-alternative", @placeholder = "Name" })
                                @Html.ValidationMessageFor(m => m.Name, "")
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CardType, new { @class = "form-control-label" })
                                @Html.TextBoxFor(m => m.CardType, new { @class = "form-control form-control-alternative"})
                                @Html.ValidationMessageFor(m => m.CardType, "")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CardNumber, new { @class = "form-control-label" })
                                @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control form-control-alternative", @placeholder = "Card Number",@type="number" })
                                @Html.ValidationMessageFor(m => m.CardNumber, "")
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ExpiryMonth, new { @class = "form-control-label" })
                                @Html.TextBox("ExpiryMonth","", new { @class = "form-control form-control-alternative", @placeholder = "MM",@type="number"})
                                @Html.ValidationMessageFor(m => m.ExpiryMonth, "")
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ExpiryYear, new { @class = "form-control-label" })
                                @Html.TextBox("ExpiryYear","", new { @class = "form-control form-control-alternative", @placeholder = "YYYY",@type="number" })
                                @Html.ValidationMessageFor(m => m.ExpiryYear, "")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Cvv, new { @class = "form-control-label" })
                                @Html.TextBox("Cvv", "", new { @class = "form-control form-control-alternative", @placeholder = "CVV", @type = "number", @maxlength = "3", @minlength = "3" })
                                @Html.ValidationMessageFor(m => m.Cvv, "")
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class = "form-control-label">Amount </label>
                                <input type="text" value="Rs. 500" disabled class = "form-control form-control-alternative" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CardHolderName, new { @class = "form-control-label" })
                                @Html.TextBoxFor(m => m.CardHolderName, new { @class = "form-control form-control-alternative", @placeholder = "Card Holder Name" })
                                @Html.ValidationMessageFor(m => m.CardHolderName, "")
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary">Make Payment</button>
            }

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>