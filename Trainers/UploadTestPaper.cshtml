@model WebBasedTMS.Models.TestPapers

@{
    ViewBag.Title = "UploadTestPaper";
    Layout = "~/Views/Shared/_Trainer.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">TEST PAPER</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UploadTestPaper", "Trainers", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Module, new { @class = "form-control-label" })
                                <input name="Module" value=@ViewBag.Module class = "form-control form-control-alternative" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Upload File", new { @class = "form-control-label" })
                                @Html.TextBox("excelfile","", new { @class = "form-control form-control-alternative",@type="file" })
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary">Upload</button>
            }

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
